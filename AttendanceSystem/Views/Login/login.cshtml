@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
    @*<link rel="icon" type="image/png" href="~/img/logo.png">*@
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Portal Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/CustomStyling/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/CustomStyling/loader.css" rel="stylesheet" />
    <link href="~/Content/CustomStyling/style.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="~/Content/CustomStyling/axa-portal.css" rel="stylesheet">

</head>

<body class="login-background">

    @*<img src="~/img/logo.png" style="width: 50px; height: 50px; margin-left: 30px; margin-top: 30px;" />*@

    <div class="container" style="margin-top: 100px;">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Identity Portal Login</div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="text" id="inputUsername" class="form-control" placeholder="Username" required="required" autofocus="autofocus">
                            <label for="inputUsername">Username</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="required">
                            <label for="inputPassword">Password</label>
                        </div>
                    </div>
                    <a class="btn btn-primary btn-block" href="#" onclick="Authenticate();">Login</a>
                </form>
            </div>
        </div>
    </div>

    <div class="modal" name="myModal5" id="myModal5" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content empty-box">
                <div>
                    <div class="loader">
                        <div class="centered">
                            <div class="blob-1"></div>
                            <div class="blob-2"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <input type="hidden" name="loginUser" value="@Url.Content("~/Login/Authenticate")" id="loginUser" />

    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/CustomJavaScript/plugins/jquery.min.js"></script>
    <script src="~/Scripts/CustomJavaScript/plugins/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/CustomJavaScript/plugins/jquery.easing.min.js"></script>
    <script src="~/Scripts/CustomJavaScript/plugins/sweetmodal.js"></script>

    <!-- Reference to the Custom JavaScript-->
    <script src="~/CustomJS/portal.js"></script>

    <script>

        $(document).ready(function () {

            history.pushState({ page: 1 }, "Login", "#login");
            window.onhashchange = function (event) {
                window.location.hash = "login";
            };
        });

    </script>
</body>

</html>




